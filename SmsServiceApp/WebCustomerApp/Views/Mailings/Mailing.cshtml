@using WebCustomerApp.Models.MailingViewModels
@model MailingViewModel

<form asp-action="Mailing" asp-controller="Mailings" method="post" asp-antiforgery="true">
    <div class="row">
        <input type="hidden" class="form-control" asp-for="Id" />
        <div class="form-group col-md-3">
            <input type="text" class="form-control" placeholder="Title" asp-for="Title" />
        </div>
        <div class="form-group col-md-3">
            <input type="text" class="form-control" placeholder="Text" asp-for="Text" />
        </div>
        <div class="form-group col-md-3">
            <input type="text" class="form-control" placeholder="Date of creation" asp-for="TimeOfCreation" readonly />
        </div>
        <div class="form-group col-md-3">
            <div class="btn-group">
                <button type="submit" class="btn btn-default">Save</button>
                <a class="btn btn-default" role="button" asp-action="Remove" asp-controller="Mailings" asp-route-MailingId="@Model.Id">Remove</a>
            </div>
        </div>
    </div>
</form>


