@using WebCustomerApp.Models.MailingViewModels
@model MailingListItemViewModel

<tr>
    <th scope="row">@Model.Title</th>
    <td>@Model.Groups</td>
    <td>@Model.TimeOfCreation</td>
    <td class="col-md-6">@Model.Text</td>
    <td class="col-md-2">
        <div class="btn-group" role="group" aria-label="Basic example">
            <a role="button" class="btn btn-primary" asp-action="Edit" asp-controller="Mailings" asp-route-MailingId="@Model.Id">Edit</a>
            <a role="button" class="btn btn-default"  asp-action="Remove" asp-controller="Mailings" asp-route-MailingId="@Model.Id">Remove</a>
        </div>
    </td>
</tr>



