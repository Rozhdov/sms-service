@using WebCustomerApp.Models.ContactsViewModels
@model EditContactViewModel

@{
    ViewData["Title"] = "Edit contact";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeContact" asp-controller="Contacts" method="post" asp-antiforgery="true">
            <h4>Change the contact</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Groups"></label>
                <select asp-for="Groups" asp-items="ViewBag.Groups" multiple class="form-control"></select>
            </div>
            <button type="submit" class="btn btn-default">Save changes</button>
        </form>
    </div>
</div>