@using WebCustomerApp.Models.ContactsViewModels
@model GroupViewModel

@{
    ViewData["Title"] = "Groups";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Groups" asp-controller="Contacts" method="post" asp-antiforgery="true">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Group"></label>
                <input asp-for="Group" class="form-control" />
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Add Group</button>
        </form>
    </div>
</div>


<hr />
<h4>Group list</h4>


@foreach (GroupViewModel iter in ViewBag.Groups)
{
    { await Html.RenderPartialAsync("Group", iter); }
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
