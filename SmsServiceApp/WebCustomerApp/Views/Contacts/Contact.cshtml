@using WebCustomerApp.Models.ContactsViewModels
@model ContactViewModel

<form asp-action="Contact" asp-controller="Contacts" method="post" asp-antiforgery="true">
    <div class="row">
        <input type="hidden" class="form-control" asp-for="Id" />
        <div class="form-group col-md-3">
            <input type="text" class="form-control" placeholder="Phone" asp-for="PhoneNumber" />            
        </div>
        <div class="form-group col-md-3">
            <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
        </div>
        <div class="form-group col-md-3">
            <select size="2" asp-for="GroupIds" asp-items="Model.Groups" multiple class="custom-select form-control"></select>
            <span asp-validation-for="GroupIds" class="text-danger"></span>
        </div>
            <div class="form-group col-md-3">
                <div class="btn-group">
                    <button type="submit" class="btn btn-default">Save</button>
                    <a class="btn btn-default" role="button" asp-action="RemoveContact" asp-controller="Contacts" asp-route-UserContactId="@Model.Id">Remove</a>
                </div>
            </div>
        </div>
</form>