@using WebCustomerApp.Models.ContactsViewModels
@model GroupViewModel

<form asp-action="Group" asp-controller="Contacts" method="post" asp-antiforgery="true">
    <div class="row">
        <input type="hidden" class="form-control" asp-for="Id" />
        <div class="form-group col-md-3">
            <input type="text" class="form-control" placeholder="Group" asp-for="Group" />
        </div>
        <div class="form-group col-md-6">
            <input type="text" class="form-control" placeholder="Description" asp-for="Description" />
        </div>
        <div class="form-group col-md-3">
            <div class="btn-group">
                <button type="submit" class="btn btn-default">Save</button>
                <a class="btn btn-default" role="button" asp-action="RemoveContactGroup" asp-controller="Contacts" asp-route-ContactGroupId="@Model.Id">Remove</a>
            </div>
        </div>
    </div>
</form>