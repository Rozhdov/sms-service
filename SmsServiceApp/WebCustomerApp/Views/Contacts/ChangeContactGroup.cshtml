@using WebCustomerApp.Models.ContactsViewModels
@model EditContactGroupViewModel

@{
    ViewData["Title"] = "Edit group";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeContactGroup" asp-controller="Contacts" method="post" asp-antiforgery="true">
            <h4>Change the group</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Id" class="form-control hidden" readonly/>
            <div class="form-group">
                <label asp-for="Group"></label>
                <input asp-for="Group" class="form-control" readonly />
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save changes</button>
        </form>
    </div>
</div>